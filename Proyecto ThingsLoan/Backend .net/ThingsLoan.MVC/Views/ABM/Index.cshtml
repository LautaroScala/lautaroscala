@model IEnumerable<ThingsLoan.MVC.Models.ABMViewModel>

@{
    ViewData["Title"] = "ABM de Cosas";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear</a>
</p>
<form asp-controller="ABM" asp-action="Index" method="get"> @*Ver el metodo utilizado*@
    <p>
        Filtrar por categoria: 
        <input type="text" name="search" placeholder="Introduzca un filtro" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
                <td>
                    @(item.Available ? "Si": "No")
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Ver Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
