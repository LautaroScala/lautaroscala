@model ThingsLoan.MVC.Models.ABMViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cosa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Desc" class="control-label">Cosa</label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label">Categoria</label>
                <input asp-for="Categories" class="form-control" />
                <span asp-validation-for="Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Categoria
            </th>
            <th>
                Fecha de Creacion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.CategoryList)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Desc
                </td>
                <td>
                    @item.CreationDate
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
